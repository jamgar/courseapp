<div id="<%= dom_id lesson %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= lesson.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= lesson.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Length:</strong>
    <%= lesson.length %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content Type:</strong>
    <%= lesson.content_type.titleize %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lesson", course_lesson_path(@course, lesson), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this lesson', edit_course_lesson_path(@course, lesson), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
