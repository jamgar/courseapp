<tr id="<%= dom_id lesson %>">
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
      <%= lesson.title %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-900"><%= lesson.description %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= lesson.length %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= lesson.content_type %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= link_to "Show", course_lesson_path(lesson.course, lesson), class: "text-green-600 hover:text-green-900 mr-2" %>
    <%= link_to 'Edit', edit_course_lesson_path(lesson.course, lesson), class: "text-indigo-600 hover:text-indigo-900" %>
  </td>
</tr>